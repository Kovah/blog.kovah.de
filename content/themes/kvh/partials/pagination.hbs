<nav class="pagination" role="navigation">

  {{#if prev}}
    <a class="pagination__link pagination__previous" href="{{page_url prev}}" title="Previous Posts">
      <i class="fal fa-arrow-left"></i>
    </a>
  {{else}}
    <span class="pagination__link pagination__link--disabled" title="Previous Posts">
      <i class="fal fa-arrow-left"></i>
    </span>
  {{/if}}

  <span class="pagination__item pagination__text">{{page}} / {{pages}}</span>

  {{#if next}}
    <a class="pagination__link pagination__link pagination__next" href="{{page_url next}}" title="Older Posts">
      <i class="fal fa-arrow-right"></i>
    </a>
  {{else}}
    <span class="pagination__link pagination__link--disabled" title="Older Posts">
      <i class="fal fa-arrow-right"></i>
    </span>
  {{/if}}

</nav>
