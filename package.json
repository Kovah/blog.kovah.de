  "description": "Kovah.de Blog source",
  "author": "Kevin Woblick <mail@kovah.de>",
  "private": true,
  "license": "UNLICENSED",
  "dependencies": {
    "@tailwindcss/typography": "^0.4.1",
    "prismjs": "^1.25.0",
    "tailwindcss": "^2.2.19"
  },
  "devDependencies": {
    "browser-sync": "^2.27.7",
    "browser-sync-webpack-plugin": "^2.3.0",
    "laravel-mix": "^6.0.39",
    "postcss": "^8.3.11"
  },
  "scripts": {
    "dev": "npm run development",
    "development": "mix",
    "watch": "mix watch",
    "watch-poll": "mix watch -- --watch-options-poll=1000",
    "hot": "mix watch --hot",
    "prod": "npm run production",
    "production": "mix --production",
    "serve": "hugo serve -D --bind 0.0.0.0",
    "build": "npm run production && hugo -D --gc"
  }
}
