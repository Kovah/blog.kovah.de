  "description": "Kovah.de Blog source",
  "author": "Kevin Woblick <mail@kovah.de>",
  "private": true,
  "license": "UNLICENSED",
  "dependencies": {
    "@tailwindcss/typography": "^0.5.1",
    "prismjs": "^1.25.0",
    "tailwindcss": "^3.0.18"
  },
  "devDependencies": {
    "autoprefixer": "^10.4.17",
    "laravel-mix": "^6.0.41",
    "postcss": "^8.4.35"
  },
  "scripts": {
    "dev": "npm run development",
    "development": "mix",
    "watch": "mix watch",
    "watch-poll": "mix watch -- --watch-options-poll=1000",
    "hot": "mix watch --hot",
    "prod": "npm run production",
    "production": "mix --production",
    "serve": "hugo serve --gc -D --bind 0.0.0.0",
    "build": "npm run production && hugo -D --gc"
  }
}
